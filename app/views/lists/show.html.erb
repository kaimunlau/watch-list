<%= render "shared/main_container" do %>
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold"><%= @list.name %></h1>
    <div class="flex gap-2">
      <%= link_to render(
          :partial => 'shared/button',
          locals: { btn_text: "New Bookmark", type: 'add' }
        ),
        new_list_bookmark_path(@list)
      %>
      <%= link_to render(
          :partial => 'shared/button',
          locals: { btn_text: "Delete List", type: 'danger' }
        ),
        list_path(@list),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
      %>
    </div>
  </div>
  <%= render "shared/card_container" do %>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <%= render "shared/card" do %>
          <div class="flex flex-col">
            <%= image_tag bookmark.movie.poster_url %>
            <div class="flex justify-between items-end">
              <div class="flex flex-col">
                <h3 class="text-xl font-bold">
                  <%= bookmark.movie.title %>
                </h3>
                <p>
                  <em>
                    "<%= bookmark.comment %>"
                  </em>
                </p>
              </div>
              <%= link_to "x",
                bookmark_path(bookmark),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "hover:text-red-500 transition duration-300"
              %>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  <% end %>
<% end %>
