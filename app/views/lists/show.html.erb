<div>
  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %>
  <h1><%= @list.name %></h1>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %><%= link_to "x", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
</div>
